{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata":true,
    "experimentalDecorators":true,
    "skipLibCheck":true,
    "noEmitOnError":true,
    "lib": ["es5","es6","dom","scripthost"],
    "moduleResolution":"node"
  },
  "exclude": [
    "node_modules"
  ]
}